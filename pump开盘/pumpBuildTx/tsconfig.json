{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "es2020", // 或者 "esnext"
    "lib": ["es2020"], // 确保包含 ES2020 库
    "esModuleInterop": true,
    // "target": "es6",
    "module": "commonjs",
    "resolveJsonModule": true, // 启用 JSON 模块解析
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
  }
}
